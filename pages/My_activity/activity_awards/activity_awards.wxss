/* pages/My_activity/activity_awards/activity_awards.wxss */
.awards_top{
  background: #fff;
  padding: 0 25rpx 30rpx;
}
.activity_title{
  line-height: 90rpx;
  font-size: 28rpx;
}
.paiming_block{
  width:100%;
  height:280rpx;
  position: relative;
}
.paiming_bg,.paiming_content{
  position: absolute;
  top: 0;left: 0;
  width:100%;
  height:100%;
}
.paiming_bg{border-radius:10rpx;}
.paiming_content{
  padding-top: 80rpx;
  padding-left: 260rpx;
  color:#fff;
  z-index: 1;
}

.mingdan_btn{
  text-align: center;
  width:140rpx;
  height:45rpx;
  line-height: 45rpx;
  background:#FFD800;
  border-radius:10rpx;
  font-size: 24rpx;
  color: #E31536;
}

.awards_list{
  background: #fff;
  line-height: 130rpx;
  border-radius:10rpx;
}
.awards_item{
  padding: 0 40rpx;
}
.awards_item:last-child{border-bottom: 0;}
.awards_item .iconfont{
  font-size: 60rpx;
  color: #E31536;
  vertical-align: middle;
}

        <view class='message_read_block'>
          <view class=''>共有35条未读消息</view>
          <view class='justify-end'>
            <view hover-class="navigator-hover">全部标记为已读</view>
            <view hover-class='navigator-hover' class='marginL20'><text class='iconfont icon-qingkong zdw_a5afc5 zdw_font26'> <text class='zdw_272f45'>清空</text></text></view>
          </view>
        </view>
      </van-tab>
      <van-tab title="任务消息" width-class="tab_width">
        <view class='message_read_block'>
          <view class=''>共有35条未读消息</view>
          <view class='justify-end'>
            <view hover-class="navigator-hover">全部标记为已读</view>
            <view hover-class='navigator-hover' class='marginL20'><text class='iconfont icon-qingkong zdw_a5afc5 zdw_font26'> <text class='zdw_272f45'>清空</text></text></view>
          </view>
        </view>
      </van-tab>
      <van-tab title="其他消息" width-class="tab_width">

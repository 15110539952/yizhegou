/* pages/My_content/user_info/user_info.wxss */
.container{
  background: #fff;
  height: 100%;
}
.user_head_block{
  padding: 30rpx;
  border-top: 1rpx solid #dee0e5;
}
.user_headimg{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.changehead{
  height: 150rpx;
  line-height: 150rpx;
  font-size: 32rpx;
}
.user_info_list,.nav_btn{
  padding: 0 30rpx;
}
.user_info_item{
  line-height: 100rpx;
  border-bottom: 1rpx solid #dee0e5;
  display: flex;
  justify-content: space-between;
}
.btn_block{
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	background-color: #e6e9f6;
	border-radius: 10rpx;
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 0 30rpx;
}
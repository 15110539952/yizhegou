/* pages/My_content/my_money/my_money.wxss */
.top_block{
  background: #fff;
  padding: 30rpx 20rpx;
}
.money_block{
	width: 100%;
	height: 250rpx;
	border-radius: 10rpx;
  position: relative;
  padding-top: 60rpx;
}
.top_bg{
  position: absolute;
  top: 0;left: 0;
  width: 100%;
  height: 100%;
}
.money_content{
  width: 100%;
  position: relative;
  z-index: 9;
}
.money_item{
  color: #fff;
  width: 280rpx;
  /* height: 130rpx; */
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}
.money_num{font-size: 44rpx;}
.nav_btn{
	width: 130rpx;
	height: 40rpx;
	line-height: 40rpx;
	background-color: #ffe400;
	border-radius: 20rpx;
  color: #272f45;
  text-align: center;
  font-size: 24rpx;
}
.bank_nav{
  width: 100%;
	height: 82rpx;
	line-height: 82rpx;
	background-color: #e6e9f6;
	border-radius: 10rpx;
  margin-top: 25rpx;
  font-size: 24rpx;
  color: #272f45;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
}
.mingxi_title{
  margin-top: 15rpx;
  line-height: 90rpx;
  background: #fff;
  padding-left: 30rpx;
  border-bottom: 1rpx solid #dee0e5;
}

/* 账户明细列表 */
.consume_list{
  padding: 0 30rpx;
  background: #fff;
}
.consume_item{
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #dee0e5;
}
.consume_item:last-child{border-bottom: 0;}
.consume_item .left{
  width: 520rpx;
}
.consume_num{
  margin-top: 20rpx;
  color: #e31536;
}
.consume_num.green{
  color: #01b12e;
}
/* pages/Shop_process/store_detail/store_detail.wxss */
.store_top_block{
  padding: 25rpx 45rpx;
	background-color: #e31536;
}
.store_headimg{
  width: 130rpx;
  height: 130rpx;
  margin-right: 20rpx;
}
.store_info{
  height: 130rpx;
  width: 430rpx;
}
.store_shoucang{
	width: 120rpx;
	height: 40rpx;
	background-color: #d39f00;
	border-radius: 5rpx;
  color: #fff;
  text-align: center;
}
.store_top_block .icon-sousuo{
  margin-top: 20rpx;
}
/* 商店tab */
.store_tab{
  width: 100%;
	height: 64rpx;
	line-height: 64rpx;
  color: #fff;
  text-align: center;
  font-size: 26rpx;
}
.store_tab_item{
  width: 25%;
	background-color: #c40d2a;
}
.banner,swiper{
  width: 100%;
  height: 376rpx;
}
/* 商品列表 */
.shop_list{
  width: 100%;
  background: #fff;
  padding: 30rpx 20rpx 50rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}
.component_shopitem{
  width: 355rpx;
  border-bottom: 1rpx solid #dee0e5;
}